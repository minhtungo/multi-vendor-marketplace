{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src", "next.config.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", "public", ".next"]
}
