{
  "name": "@repo/server",
  "version": "1.0.0",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./lib/*": {
      "types": "./src/lib/*.ts",
      "import": "./src/lib/*.ts",
      "require": "./src/lib/*.ts"
    },
    "./middlewares/*": {
      "types": "./src/middlewares/*.ts",
      "import": "./src/middlewares/*.ts",
      "require": "./src/middlewares/*.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf node_modules"
  },
  "dependencies": {
    "http-status-codes": "2.3.0",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@types/express": "5.0.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  },
  "peerDependencies": {
    "express": "5.1.0"
  }
}
