{
  "name": "@repo/lib",
  "version": "1.0.0",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./validations/*": {
      "types": "./src/validations/*.ts",
      "import": "./src/validations/*.ts",
      "require": "./src/validations/*.ts"
    },
    "./utils/*": {
      "types": "./src/utils/*.ts",
      "import": "./src/utils/*.ts",
      "require": "./src/utils/*.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf node_modules"
  },
  "dependencies": {
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  }
}
